# -----------------------------
# Databricks configuration
# -----------------------------
DATABRICKS_HOST=
DATABRICKS_TOKEN=
DATABRICKS_CATALOG=
DATABRICKS_SCHEMA=
DATABRICKS_VOLUME=
# -----------------------------

# -----------------------------
# Image processing configuration
# -----------------------------
# DPI for PDF to image conversion (default: 300)
IMAGE_DPI=300
# Maximum width for images (default: 2048)
IMAGE_MAX_WIDTH=2048
# Maximum height for images (default: 2048)
IMAGE_MAX_HEIGHT=2048
# -----------------------------

# -----------------------------
# Fragment configuration
# -----------------------------
# Tile width for fragmentation (default: 1024)
FRAGMENT_TILE_WIDTH=1024
# Tile height for fragmentation (default: 1024)
FRAGMENT_TILE_HEIGHT=1024
# Overlap ratio for tiles (default: 0.1, i.e., 10%)
FRAGMENT_OVERLAP_RATIO=0.1
# Complexity threshold for skipping blank tiles (default: 0.03, i.e., 3%)
FRAGMENT_COMPLEXITY_THRESHOLD=0.03
# Enable dynamic fragmentation (default: false)
FRAGMENT_DYNAMIC_ENABLED=false
# -----------------------------

# -----------------------------
# OpenAI/LLM configuration
# -----------------------------
# OpenAI API base URL (e.g., https://api.openai.com/v1)
OPENAI_BASE_URL=
# OpenAI API key (starts with sk-)
OPENAI_API_KEY=
# OpenAI model to use (default: gpt-4o for vision capabilities)
OPENAI_MODEL=gpt-4o
# Temperature for response generation (0.0-1.0, default: 0.1)
OPENAI_TEMPERATURE=0.1
# Maximum tokens for response (default: 4000)
OPENAI_MAX_TOKENS=4000
# -----------------------------

